exercice 3

def dec_expo(n):
    i=n
    liste = []
    expo = 0
    d=3
    if n % 2 == 0 :
        while i % 2 == 0 and i>1 :
            i = i/2
            expo = expo + 1
        liste.append((2,expo))
        i=n
        while i>1 :
            if n % d ==0 :
                while i % d == 0 and i > 1 :
                    i=i/d
            liste.append((2,expo))
            d=d+2
    return liste
    
