exercice 2

def somme_div(n):
    somme=0
    i=1
    while i<=n:
        if n % i == 0:
            somme=somme+i
        i=i+1
    return somme
    
    def est_premier(n):
    nombre = somme_div(n)
    i=2
    while i < nombre and nombre % i != 0 :
        i = i + 1
    return i == nombre
    
    def categorie(n):
    catégorie = 0
    nombre = somme_div(n)
    if nombre > 2*n :
        catégorie = "abondant"
    elif nombre == 2*n :
        catégorie = "parfait"
    elif nombre < 2*n :
        catégorie = "déficient"
    return catégorie
    
    
